{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "outDir": "out",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src"
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "out",
  ],
}

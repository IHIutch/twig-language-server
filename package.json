{
  "version": "0.0.0",
  "repository": "https://github.com/kaermorchen/twig-language-server",
  "private": true,
  "workspaces": [
    "packages/twig-language-server",
    "packages/vscode-twig"
  ],
  "scripts": {
    "build": "tsc --build"
  },
  "author": "Stanislav Romanov <kaermorchen@gmail.com>",
  "license": "Mozilla Public License 2.0",
  "release-it": {
    "hooks": {
      "after:bump": "npm run build -ws"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "@release-it-plugins/workspaces": {
        "additionalManifests": {
          "versionUpdates": [
            "package.json",
            "packages/twig-language-server/package.json",
            "packages/vscode-twig/package.json"
          ],
          "dependencyUpdates": [
            "packages/vscode-twig/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^5.0.0",
    "@release-it-plugins/workspaces": "^3.2.0",
    "release-it": "^15.10.3"
  }
}

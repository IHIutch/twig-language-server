{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch VSCode Extension",
      "type": "extensionHost",
      "request": "launch",
      "preLaunchTask": "npm: build",
      "autoAttachChildProcesses": true,
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-twig"
      ],
    },
  ]
}
